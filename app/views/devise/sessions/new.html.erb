<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Entrar!</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Cadastrar', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :senha %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Entrar', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Lembrar-me
          </label>
        </div>
      <% end -%>
  <% end %>
  <%= link_to( image_tag("facebook-login-button.png"), "/users/auth/facebook" ) %>
</div>
