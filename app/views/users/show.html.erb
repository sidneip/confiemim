<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <img src=<%= @user.image_string %> alt="125x125" class="img-circle">
      <h3 style="text-align:center;"><%= @user.name if @user.name %></h3>
      <h4 style="text-align:center;"><%= @user.email if @user.email %></h4>

      <%= render 'comments/form' %>

      <% @user.comments.each do |comment| %>
        <p><%= "Comentario: #{comment.body}" unless comment.body.blank?  %></p>
      <% end %>
    </div>
  </div>
</div>